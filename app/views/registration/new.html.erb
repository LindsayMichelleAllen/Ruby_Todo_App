
<h1 id="heading">Sign Up</h1>
<div id="form-centering">
  <%= form_with model: @user, url: sign_up_path, method: "post" do |f| %>
    <p>
    <%= f.label 'email' %><br>
    <%= f.text_field :email %>
    </p>
    <p>
    <%= f.label 'username' %><br>
    <%= f.text_field :username %>
    </p>
    <p>
    <%= f.label 'password' %><br>
    <%= f.password_field :password %>
    </p>
    <p>
    <%= f.label 'password_confirmation' %><br>
    <%= f.password_field :password_confirmation %>
    </p>
    <p>
    <%= f.submit 'Sign Up', class: "button" %>
    </p>
  <% end %>
  
    </div>
    <div id="button-container">
    <p>
    <%= button_to 'Return to Home', home_path, method: :get, class: "button" %>
    </p>
    </div>