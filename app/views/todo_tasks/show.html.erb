<% if @todo_task.isCurrent %>
<div id="form-centering">
<%= render @todo_task %>
</div>
<br>

<div id="button-container-2-max">
  <%= button_to "Edit Task", edit_todo_task_path(@todo_task), method: :get, class: "button" %> 
  <%= button_to "Delete Task", @todo_task, method: :delete, class: "button" %>
  <%= button_to "Back To Tasks", todo_tasks_path, method: :get, class: "button" %> 
  <%= button_to 'Return to Home', home_path, method: :get, class: "button" %>
</div>
<% end %>