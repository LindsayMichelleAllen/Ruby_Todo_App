<%= form_with(model: todo_task) do |form| %>
  <% if todo_task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo_task.errors.count, "error") %> found in form:</h2>

      <ul>
        <% todo_task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-grid">
    <%= form.label :description %>
    <%= form.text_field :description %>
    <%= form.label :reminder %>
    <%= form.datetime_field :reminder %>
    <%= form.label :dueb %>
    <%= form.datetime_field :dueby %>
  </div>
  <br>
  <div id="button-container">
    <%= form.submit class: "button" %>
  </div>
<% end %>
