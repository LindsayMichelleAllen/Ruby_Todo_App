<%= form_with(model: todo_task) do |form| %>
  <% if todo_task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo_task.errors.count, "error") %> found in form:</h2>

      <ul>
        <% todo_task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :description, style: "margin-right: 10px;" %>
    <%= form.text_field :description, style: "float: right;" %>
  </div>
  <br>
  <div>
    <%= form.label :reminder, style: "margin-right: 10px;" %>
    <%= form.datetime_field :reminder, style: "float: right;" %>
  </div>
  <br>
  <div>
    <%= form.label :dueby, style: "margin-right: 10px;" %>
    <%= form.datetime_field :dueby, style: "float: right;" %>
  </div>
  <br>
  <div id="button-container">
    <%= form.submit class: "button" %>
  </div>
<% end %>
