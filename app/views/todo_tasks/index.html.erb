<h1 id="heading">Pending Tasks</h1>
<div id="form-centering">
<div id="todo_tasks">
  <% @todo_tasks.each do |todo_task| %>
    <% if todo_task.is_current && !todo_task.is_complete %>
    <%= render todo_task %>
    <p>
      <%= button_to "Manage Task", todo_task, method: :get, params: { id: todo_task.object_id }, class: "button" %>
    </p>
    <% end %>
  <% end %>
</div>
</div>
<br>

<div id="button-container">
<%= button_to "New Task", new_todo_task_path, method: :get, class: "button" %>
<%= button_to 'Return to Home', home_path, method: :get, class: "button" %>
</div>